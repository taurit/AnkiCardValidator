<Window
    x:Class="RefineDeck.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:RefineDeck.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RefineDeck"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:RefineDeck.ViewModels"
    xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="Refine deck"
    Width="1200"
    Height="750"
    d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel}"
    mc:Ignorable="d">
    <Window.Resources>
        <converters:ApprovalStatusToColorConverter x:Key="ApprovalStatusToColorConverter" />
        <converters:ApprovalStatusToSymbolConverter x:Key="ApprovalStatusToSymbolConverter" />
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="60" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!--  Violet panel on the left  -->
        <ListBox
            Grid.Row="0"
            Grid.Column="0"
            HorizontalContentAlignment="Stretch"
            ItemsSource="{Binding Deck.Flashcards}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectedItem="{Binding SelectedFlashcard}"
            SelectionChanged="FlashcardChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="2">
                        <DockPanel>
                            <WrapPanel Margin="0,0,6,0" DockPanel.Dock="left">
                                <TextBlock Foreground="{Binding ApprovalStatus, Converter={StaticResource ApprovalStatusToColorConverter}}" Text="{Binding ApprovalStatus, Converter={StaticResource ApprovalStatusToSymbolConverter}}" />
                            </WrapPanel>

                            <TextBlock DockPanel.Dock="Left" Text="{Binding Term}" />
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="BorderThickness" Value="0" />
                </Style>
            </ListBox.ItemContainerStyle>

        </ListBox>

        <!--  Middle  -->
        <DockPanel
            Grid.Row="0"
            Grid.Column="2"
            LastChildFill="True">


            <UniformGrid
                Height="40"
                HorizontalAlignment="Stretch"
                DockPanel.Dock="Bottom"
                Rows="1">
                <Button Background="IndianRed">Reject</Button>
                <Button Background="DarkSeaGreen">Approve</Button>
            </UniformGrid>
            <DataGrid
                Height="150"
                AutoGenerateColumns="False"
                BorderThickness="0"
                CanUserSortColumns="True"
                ClipboardCopyMode="IncludeHeader"
                DockPanel.Dock="Bottom"
                GridLinesVisibility="Horizontal"
                HorizontalGridLinesBrush="LightGray"
                IsReadOnly="True"
                ItemsSource="{Binding SelectedFlashcard.Warnings}"
                VerticalGridLinesBrush="Transparent">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="Auto"
                        Binding="{Binding Severity, Mode=OneWay}"
                        Header="Severity" />
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel>
                <GroupBox Header="Question">
                    <DockPanel LastChildFill="True">
                        <Button
                            Width="50"
                            Margin="5,0,0,0"
                            VerticalAlignment="Stretch"
                            Content="Reset"
                            DockPanel.Dock="Right" />
                        <TextBox MaxLines="3" Text="{Binding SelectedFlashcard.Term, FallbackValue='[Card not selected]'}" />
                    </DockPanel>
                </GroupBox>

            </StackPanel>
        </DockPanel>


        <!--  Lime panel on the right  -->
        <wpf:WebView2
            Name="Preview"
            Grid.Row="0"
            Grid.Column="4" />


        <GridSplitter
            Grid.Row="0"
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            ResizeBehavior="PreviousAndNext"
            ResizeDirection="Columns" />
        <GridSplitter
            Grid.Row="0"
            Grid.Column="3"
            Width="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            ResizeBehavior="PreviousAndNext"
            ResizeDirection="Columns" />

        <StatusBar
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="5">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <StatusBarItem Grid.Column="0" ToolTip="Approved">
                <TextBlock DockPanel.Dock="Left" Foreground="DarkSeaGreen">
                    <Run>☑</Run>
                    <Run Text="{Binding NumApproved, Mode=OneWay}" />
                </TextBlock>
            </StatusBarItem>


            <StatusBarItem Grid.Column="1" ToolTip="Rejected">
                <TextBlock DockPanel.Dock="Left" Foreground="IndianRed">
                    <Run>⮽</Run>
                    <Run Text="{Binding NumRejected, Mode=OneWay}" />
                </TextBlock>
            </StatusBarItem>

            <StatusBarItem Grid.Column="4" ToolTip="Still need review">
                <TextBlock DockPanel.Dock="Left" Foreground="MediumPurple">
                    <Run>☐</Run>
                    <Run Text="{Binding NumPending, Mode=OneWay}" />
                </TextBlock>
            </StatusBarItem>


            <StatusBarItem Grid.Column="4" HorizontalContentAlignment="Right">
                <Button Padding="4,2" DockPanel.Dock="Right">
                    Generate Anki deck
                </Button>
            </StatusBarItem>

        </StatusBar>


    </Grid>
</Window>
