<Window
    x:Class="RefineDeck.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RefineDeck"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Refine deck"
    Width="1200"
    Height="750"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <!--  Violet panel on the left  -->
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Background="#FF9400D3" />

        <!--  Yellow in the middle  -->
        <Border
            Grid.Row="0"
            Grid.Column="2"
            Background="#FFFFD700" />

        <!--  Lime panel on the right  -->
        <Border
            Grid.Row="0"
            Grid.Column="4"
            Background="#FF00FF00" />


        <GridSplitter
            Grid.Row="0"
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            ResizeBehavior="PreviousAndNext"
            ResizeDirection="Columns" />
        <GridSplitter
            Grid.Row="0"
            Grid.Column="3"
            Width="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            ResizeBehavior="PreviousAndNext"
            ResizeDirection="Columns" />

        <StatusBar Grid.Row="1" Grid.ColumnSpan="5">
            ❌ 200 💬 1000 ✅ 400 🤖👤💻
            <TextBlock FontFamily="Segoe UI Emoji" Text="❌ 200 💬 1000 ✅ 400 🤖👤💻" />
        </StatusBar>


    </Grid>
</Window>
