{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Flashcard deck",
    "additionalProperties": false,

    "properties": {
        "$schema": {
            "type": "string"
        },
        "deckName": {
            "type": "string"
        },
        "mediaFilesPrefix": {
            "type": "string",
            "description": "Short, but ideally unique prefix for all media file names in the deck."
        },
        "flashcards": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,

                "properties": {
                    "term": {
                        "type": "string",
                        "description": "The main word or term being learned."
                    },
                    "termBaseForm": {
                        "type": "string",
                        "description": "The standardized form of the term being learned."
                    },
                    "context": {
                        "type": "string",
                        "description": "A sentence or phrase providing context for the term."
                    },
                    "contextAudio": {
                        "type": "string",
                        "description": "Relative URL to the audio file for the context sentence."
                    },
                    "type": {
                        "type": "string",
                        "description": "The grammatical category of the term, such as noun, verb, etc."
                    },
                    "termTranslation": {
                        "type": "string",
                        "description": "The translation of the term in another language."
                    },
                    "termEnglishTranslation": {
                        "type": "string"
                    },
                    "remarks": {
                        "type": "string",
                        "description": "Remarks left by teacher for student."
                    },
                    "contextTranslation": {
                        "type": "string",
                        "description": "The translation of the context sentence."
                    },
                    "contextTranslationAudio": {
                        "type": "string",
                        "description": "Relative URL to the audio file for the context sentence translation."
                    },
                    "contextEnglishTranslation": {
                        "type": "string"
                    },
                    "termAudio": {
                        "type": "string",
                        "description": "Relative URL to the audio file for the term."
                    },
                    "termTranslationAudio": {
                        "type": "string",
                        "description": "Relative URL to the audio file for the term translation."
                    },
                    "imageCandidates": {
                        "type": "array",
                        "description": "Array of potential image files related to the term (paths relative to flashcards.json).",
                        "items": {
                            "type": "string"
                        }
                    },
                    "selectedImageIndex": {
                        "type": "integer",
                        "description": "Index of the selected image from the imageCandidates array."
                    }
                },
                "required": [
                    "term",
                    "context",
                    "type",
                    "termTranslation",
                    "termDefinition",
                    "contextTranslation",
                    "termAudio",
                    "termTranslationAudio",
                    "imageCandidates",
                    "selectedImageIndex"
                ]
            }
        }
    },
    "required": ["flashcards", "deckName"]
}
